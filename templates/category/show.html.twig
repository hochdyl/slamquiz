{% extends 'base.html.twig' %}

{% block title %}{{ 'Category'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Category'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>Longname</th>
                <td>{{ category.longname }}</td>
            </tr>
            <tr>
                <th>Quiz associ√©s</th>
                {% for quiz in category.quizzes %}
                    <td>{{ quiz }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}">{{ 'Back to list'|trans }}</a>

    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">{{ 'Edit'|trans }}</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
