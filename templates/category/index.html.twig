{% extends 'base.html.twig' %}

{% block title %}{{ 'Category index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Category index'|trans }} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Shortname</th>
                <th>Longname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.shortname }}</td>
                <td>{{ category.longname }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('category_show', {'id': category.id}) }}">{{ 'Show'|trans }} </a>
                    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">{{ 'Edit'|trans }} </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'No records found'|trans }} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('category_new') }}">{{ 'Create new'|trans }} </a>
{% endblock %}
