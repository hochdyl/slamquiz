{% extends 'base.html.twig' %}

{% block title %}{{ 'Answer'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Answer'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ answer.text }}</td>
            </tr>
            <tr>
                <th>Correct</th>
                <td>{{ answer.correct }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('answer_index') }}">{{ 'Back to list'|trans }}</a>

    <a class="btn btn-warning" href="{{ path('answer_edit', {'id': answer.id}) }}">{{ 'Edit'|trans }}</a>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
